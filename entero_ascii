#include <stdio.h>
#include <stdlib.h>
#include <string.h>

/*
la función recibe un numero entero y lo organiza en un vector que contiene la dirección ascii modificada del .list de cada dígito,
EJEMPLO: numero =1234
arreglo {d3,d2,d1,d0} = {1,2,3,4} =>ascii {17,18,19,20}


*/
int* entero_ascii(int numero){
    int contador =1; //cuenta el número de dígitos de numero
    int i=1,j=0;
    int b;
    int c = numero; //se copia a numero en c, debido a que el proceso de contar destruye el numero
    
     while(c/10>0)
    {
        c=c/10;
        contador++;
    };
    
    int arreglo[contador];  //se crea a arreglo con el mismo tamaño que la cantidad de dígitos de numero
    
    while(contador>=0){
        b=((numero)%(10*i))/i;   //se saca cada dígito de numero y se lo iguala a una variable b
        arreglo[j]=b+16;   //cada dígito de numero se guarda en la posición correspondiente en arreglo
        i = i*10;
        j++;
        contador--;
    };
     return arreglo;
};


int main(void) {

    
    int* m;
    m=entero_ascii(1234);  
     
	printf("%d\n",m[0]);
	
	return 0;
}
