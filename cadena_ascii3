#include <stdio.h>
#include <stdlib.h>
#include <string.h>


//función que toma una cadena de caracteres y genera un vector "x" con el código ascii de cada letra
//almacenado en una posición
/*
EJEMPLO: cadena = " hola" = { ,h,o,l,a};
	x = {b3,b2,b1,b0} = {65,76,79,72,00}
	                    {a,l,o,h, } 

*/
int* cadena_ascii(char* cadena){   			
   	int x[strlen(cadena)];   //strlen es una función de string que devuelve la longitud de una cadena de caracteres
  	int i;
   
  for(i = 0; cadena[i] !='\0'; i++){ //recorre la cadena de entrada hasta encontrar que esta ha finalizado con '\0' que siempre va al final 
  					//de cualquier cadena					
    x[i]=cadena[i]-32; //iguala cada letra de la cadena ha su código ascii -32 para que coincida con el .list
  };
  return x;  //la función es un puntero que apunta al arreglo x en el que se van a guardar las direcciones asciide cada letra de "cadena"
};

int main(void) {
	int* m; // puntero
	
	m=cadena_ascii(" hola"); // ahora el puntero apunta a la dirección de x
	
	printf("%d\n",m[3]); // "%d\n" se usa para observar el valor al que apunta el puntero m en su dirección [3]
	return 0; //
}

